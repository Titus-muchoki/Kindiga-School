
{{#partial "content"}}
    {{#if editTeacher}}
        <h1>Edit this comment!</h1>
        <form action="/teachers/{{teacher.id}}" method="post">
            <label for="comment">Edit this student comment</label>
            <input id="newStudentComment" name="newStudentComment" type="text" value="{{teacher.comment}}">
            <button type="submit" class="btn btn-default">Go!</button>
        </form>
    {{else}}
        <h1>Add a new comment!</h1>
        <form action="/teachers" method="post">
            <label for="comment">Student Comment</label>
            <input id="comment" name="comment" type="text">
            <button type="submit" class="btn btn-default">Go!</button>
        </form>
    {{/if}}
{{/partial}}

{{> layout.hbs}}