{{#partial "content"}}
    <h1>{{teacher.comment}}</h1>
    <p>Here are all the students listed with their teachers:</p>
    <ul>
        {{#each students}}
            <li>
                <p><a href="/teachers/{{teacher.id}}/students/{{id}}">{{description}} </a></p>
            </li>
        {{/each}}
    </ul>
    <button>    <a href="/teachers/{{teacher.id}}/edit">Edit this comment</a><br>
    </button>
    <a href="/teachers/{{teacher.id}}/delete">DELETE this teacher</a>
{{/partial}}

