{{#partial "content"}}
    {{#if editStudent}}
        <h1>Edit this student!</h1>
        <form action="/students/{{student.id}}" method="post">
            <br>
            <label for="name">Edit this student name</label>
            <input id="name" name="name" type="text" value="{{student.name}}">
            <br>
            <label for="phoneNumber">Edit this student phoneNumber</label>
            <input id="phoneNumber" name="phoneNumber" type="text" value="{{student.phoneNumber}}">
            <br>
            <label for="email">Edit this student email</label>
            <input id="email" name="email" type="text" value="{{student.email}}">
            <br>
            <label for="teacherId">Update this student teacher:</label>
            <select id="teacherId" name="teacherId">
                {{#each teachers}}
                    <option value="{{id}}">{{comment}}</option>
                {{/each}}
            </select>
            <p>Don't see the right comment?<a href="/teachers/new">Add a new one first.</a></p>
            <button type="submit" class="btn btn-default">Go!</button>
        </form>
    {{else}}
        <h1>Add a new student!</h1>
        <form action="/students" method="post">
        {{#if teachers}}

                <label for="name">student name</label>
            <input id="name" name="name" type="text">
            <br>
            <label for="phoneNumber">student phoneNumber</label>
            <input id="phoneNumber" name="phoneNumber" type="number">
            <br>
            <label for="email">student email</label>
            <input id="email" name="email" type="text">
            <br>
                <label for="teacherId">Teacher comment for the student:</label>
                <select id="teacherId" name="teacherId">
                    {{#each teachers}}
                        <option value="{{id}}">{{comment}}</option>
                    {{/each}}
                </select>
            <p>Don't see the right comment?<a href="/teachers/new">Add a new one first.</a></p>
        {{else}}
            <h3> You'll need to add a teacher before you add a student. <a href="/teachers/new">Add one here.</a> </h3>

        {{/if}}
            <button type="submit" class="btn btn-default">Go!</button>
        </form>
    {{/if}}
{{/partial}}

{{> layout.hbs}}